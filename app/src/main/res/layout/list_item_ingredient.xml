<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/text_view_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/ingredient_adapter_tiny_text" />

    <TextView
        android:id="@+id/text_view_ingredient_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/text_view_units"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/edit_text_proportional_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/edit_text_quantity"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_ok"
        android:text="@string/button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>


</LinearLayout>